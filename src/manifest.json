{
  "manifest_version": 3,
  "name": "StudydriveDownload",
  "version": "0.0.1",
  "description": "Adds a download button to the top of the Page and removes Ads",
  "host_permissions": ["https://www.studydrive.net/*"],
  "homepage_url": "https://github.com/phawdk/studydrive-download",
  "permissions": ["notifications"],
  "content_scripts": [
    {
      "matches": ["https://www.studydrive.net/*"],
      "css": ["main.css"],
      "js": ["content-script.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": ["https://www.studydrive.net/*"],
      "js": ["bridge.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16x16.png",
      "48": "icon48x48.png",
      "128": "icon128x128.png"
    }
  },
  "icons": {
    "16": "icon16x16.png",
    "48": "icon48x48.png",
    "128": "icon128x128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["worker.js"],
      "matches": ["https://www.studydrive.net/*"]
    }
  ]
}
